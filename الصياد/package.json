
{
  "name": "al-sayyad-pos",
  "version": "1.0.0",
  "description": "نظام كاشير ومخازن متطور يعمل أوفلاين",
  "main": "electron-main.js",
  "scripts": {
    "start": "electron .",
    "build": "vite build",
    "build:electron": "npm run build && electron-builder --win --x64",
    "dist": "electron-builder"
  },
  "author": "Al-Sayyad",
  "dependencies": {
    "dexie": "^4.2.1",
    "lucide-react": "^0.562.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "@google/genai": "^1.34.0"
  },
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3",
    "vite": "^5.4.0",
    "@vitejs/plugin-react": "^4.0.0"
  },
  "build": {
    "appId": "com.alsayyad.pos",
    "productName": "AlSayyadPOS",
    "files": [
      "dist/**",
      "electron-main.js",
      "package.json",
      "node_modules/**"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "directories": {
      "output": "dist"
